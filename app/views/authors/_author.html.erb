  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <td  width="27%"><%=  author.name %></td>
          <td width="30%"><%=  author.description %></td>
          <% if user_signed_in? && current_user.admin? %>
          <td class="text-right">
            <%= link_to t(".delete"), author,
              method: :delete, data: {confirm: t(".confirm")} %>
              | <%= link_to t(".edit"), edit_author_path(author) %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
