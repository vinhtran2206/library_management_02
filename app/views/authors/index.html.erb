<% provide :title, t(".title") %>
<h1><%= t(".title") %></h1><hr>
<% if logged_in? && current_user.admin? %>
  <%= link_to new_author_path, class: "btn btn-danger" do %>
    <span class="glyphicon glyphicon-plus">&nbsp;<%= t(".add") %></span>
  <% end %>
<% end %>
<hr>
<div class="input-group search_inline">
  <%= form_tag(authors_path, method: :get) do %>
    <%= text_field_tag :search, params[:search],
      placeholder: t(".search"), class: "form-control search_input" %>
    <%= submit_tag t(".button_search"), name: nil,
      class: "btn btn-primary btn_search" %><i class="fa fa-search fa-fw"></i>
  <% end %>
</div>
<%= will_paginate %>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th class="text-justify active" width="30%"><%= t ".name" %></th>
          <% if logged_in? &&  current_user.admin? %>
            <th class="text-right active"><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
    </table>
  </div>
</div>
<ul class="authors">
  <%= render @authors %>
</ul>
<%= will_paginate %>
