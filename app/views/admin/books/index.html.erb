<% provide :title, t(".title") %>
<h1><%= t(".title") %></h1><hr>
<%= link_to new_admin_book_path, class: "btn btn-danger" do %>
  <span class="glyphicon glyphicon-plus">&nbsp;<%= t(".new") %></span>
<% end %>
<hr>
<div class="input-group search_inline">
  <%= search_form_for  @search, url: admin_books_path do |f| %>
      <%= f.text_field :name_cont,
    placeholder: t(".search"), class: "form-control search_input" %>
      <%= f.submit t(".button_search"), class: "btn btn-primary btn_search"%>
  <% end %>
</div><hr>
<%= will_paginate %>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th class="text-justify active" width="20%"><%= sort_link(@search, :name, t(".name")) %></th>
          <th class="text-justify active" width="15%"><%= sort_link(@search, :category_id, t(".category")) %></th>
          <th class="text-center active" width="20%"><%= sort_link(@search, :author_id, t(".author")) %></th>
          <th class="text-center active" width="19%"><%= sort_link(@search, :publisher_id, t(".publisher")) %></th>
          <th class="text-center active" width="12%"><%= sort_link(@search, :amount, t(".amount")) %></th>
          <% if current_user.admin? %>
            <th class="text-right active"><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
    </table>
  </div>
</div>
<%= render @books %>
<%= will_paginate %>
