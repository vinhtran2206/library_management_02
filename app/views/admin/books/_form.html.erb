<%= form_for @book, url: yield(:url) do |f| %>
  <%= render "shared/error_messages", object: @book%>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>

  <%= f.label :number_of_pages %>
  <%= f.number_field :num_of_pages, class: "form-control" %>

  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/png,image/jpeg", class: "form-control" %>

  <%= f.label :amount %>
  <%= f.number_field :amount, class: "form-control" %>

  <%= f.label :authors %>
  <%= f.collection_select :author_id, get_authors(:name), :id, :name, include_blank: false %>

  <%= f.label :categories %>
  <%= f.collection_select :category_id, get_categories(:name), :id, :name, include_blank: false %>

  <%= f.label :publishers %>
  <%= f.collection_select :publisher_id, get_publishers(:name), :id, :name, include_blank: false %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
