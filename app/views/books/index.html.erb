<%= render template: "static_pages/home" %>
<% provide :title, t(".title") %>
<div class="input-group search_inline">
  <%= form_tag(books_path, method: :get) do %>
      <%= text_field_tag :search, params[:search],
    placeholder: t(".search"), class: "form-control search_input" %>
      <%= submit_tag t(".button_search"), name: nil,
    class: "btn btn-primary btn_search" %><i class="fa fa-search fa-fw"></i>
  <% end %>
</div>
<div id="denyModal" class="modal fade" role="dialog"></div>
<%= will_paginate %>
<div class="row">
  <% @books.each do |book| %>
    <%= render partial: "books/book_row", locals: { book: book }%>
  <% end %>
</div>
<%= will_paginate %>
