<%= render template: "static_pages/home" %>
<% provide :title, t(".title") %>
<div class="input-group search_inline">
  <%= search_form_for  @search, url: books_path do |f| %>
      <%= f.text_field :name_cont,
    placeholder: t(".search"), class: "form-control search_input" %>
      <%= f.submit t(".button_search"), class: "btn btn-primary btn_search"%>
  <% end %>
</div>
<div id="denyModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div id="commentModal"></div>
      </div>
    </div>
  </div>
</div>
<%= will_paginate %>
<div class="row">
  <% @books.each do |book| %>
    <%= render "book_row", book: book, borrow_detail: @borrow_detail%>
  <% end %>
</div>
<%= will_paginate %>


