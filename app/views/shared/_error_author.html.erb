<% if @author.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t("shared.form", error_list: t("shared.error",
        count: @author.errors.count)) %>.
    </div>
    <ul>
    <% @author.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
