<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <% if user_signed_in? && current_user.admin?%>
          <li><%= link_to t(".book"), admin_books_path %></li>
        <% end %>
        <li><%= link_to t(".author"), authors_path %></li>
        <li><%= link_to t(".publisher"), publishers_path %></li>
        <li><%= link_to t(".category"), categories_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t(".users"), users_path %></li>
        <% end %>
        <% if user_signed_in? && current_user.admin?%>
          <li><%= link_to t(".manage_borrow"), admin_borrows_path %></li>
        <% end %>
        <% if user_signed_in? && !current_user.admin?%>
          <li><%= link_to t(".manage_borrow"), borrows_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="cart-text"><%= render "layouts/cart_text" %><li>
        <li><%= link_to t(".home"), root_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".account", name: current_user.full_name) %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
